{
    "admin": {
        "lists": {
            "cms.default": {
                "properties": [
                    "news_date",
                    "title"
                ],
                "list_actions": [
                    {
                        "ident": "create",
                        "priority": 10,
                        "label": {
                            "en": "New article",
                            "fr": "Nouvelle article"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                ],
                "object_actions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "split_button": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to news",
                                    "fr": "Voir la nouvelle"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": {
                    "position": {
                        "property": "position",
                        "mode": "asc"
                    }
                }
            }
        },

        "forms": {},

        "form_groups": {
            "cms.info": {
                "title": "Info",
                "show_title": false,
                "show_header": false,
                "icon": "info",
                "properties": [
                    "title",
                    "summary",
                    "content",
                    "image"
                ]
            },
            "cms.gallery": {
                "title": {
                    "fr": "Galerie d'images",
                    "en": "Gallery"
                },
                "show_title": false,
                "show_header": false,
                "icon": "photo",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "image-gallery",
                "attachable_objects": {
                    "charcoal/attachment/object/image": {
                        "label": {
                            "fr": "Image",
                            "en": "Image"
                        }
                    }
                }
            },
            "cms.resources": {
                "title": {
                    "en": "Documents",
                    "fr": "Ressources"
                },
                "show_title": false,
                "show_header": false,
                "icon": "paperclip",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "document",
                "attachable_objects": {
                    "charcoal/attachment/object/file": {
                        "label": {
                            "fr": "Document",
                            "en": "Document"
                        }
                    },
                    "charcoal/attachment/object/link": {
                        "label": {
                            "fr": "Lien",
                            "en": "Link"
                        }
                    }
                }
            },
            "cms.meta": {
                "show_title": false,
                "show_header": false,
                "icon": "tags",
                "title": {
                    "fr": "Description méta",
                    "en": "Meta tags"
                },
                "properties": [
                    "meta_title",
                    "meta_description",
                    "meta_image",
                    "keywords"
                ]
            },
            "cms.advanced": {
                "title": "Options",
                "show_title": false,
                "show_header": false,
                "icon": "cog",
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1, 1, 1]},
                        {"columns": [1]},
                        {"columns": [1, 1, 1]}
                    ]
                },
                "properties": [
                    "category",
                    "news_date",
                    "publish_date",
                    "expiry_date",
                    "slug",
                    "active"
                ]
            },
            "cms.revisions": {
                "title": {
                    "fr": "Révisions",
                    "en": "Revisions"
                },
                "show_title": false,
                "show_header": false,
                "icon": "floppy-o",
                "template": "charcoal/admin/widget/form-group/object-revisions",
                "type": "charcoal/admin/widget/form-group/object-revisions"
            }
        },

        "dashboards": {
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "cms.default",
                        "group_display_mode": "tab"
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "cms.default",
                        "data_sources": ["request"]
                    }
                }
            }
        },
        "default_create_dashboard": "cms.edit",
        "default_edit_dashboard": "cms.edit",
        "default_collection_dashboard": "cms.table"
    }
}
