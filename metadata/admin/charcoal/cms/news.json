{
    "properties": {
        "category": {
            "obj_type": "charcoal/cms/news-category"
        }
    },

    "slug_pattern": {
        "en": "en/news/{{title}}",
        "fr": "fr/nouvelles/{{title}}"
    },

    "sources": {
        "default": {
            "table": "cms_news"
        }
    },
    "default_source": "default",

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "news_date",
                    "title"
                ],
                "orders": [{
                    "property": "news_date",
                    "mode": "desc"
                }]
            }
        },
        "default_list": "default",

        "forms": {
            "default": {
                "groups": {
                    "cms.info": {},
                    "cms.advanced": {},
                    "cms.meta": {}
                },
                "sidebars": {
                    "default": {}
                }
            }
        },
        "default_form": "default",

        "dashboards": {
            "edit": {
                "layout": {
                    "structure": [{
                        "columns": [ 1 ]
                    }]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "obj_type": "charcoal/cms/news"
                    }
                }
            },
            "table": {
                "title": {
                    "fr": "Liste des nouvelles",
                    "en": "News list"
                },
                "layout": {
                    "structure": [{
                        "columns": [ 1 ]
                    }]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/cms/news"
                    }
                }
            }
        },
        "default_create_dashboard": "edit",
        "default_edit_dashboard": "edit",
        "default_collection_dashboard": "table"
    }
}
