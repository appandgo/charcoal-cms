{
    "template": {
        "ident": "charcoal/cms/news"
    },

    "routable": {
        "editable": true,
        "pattern": {
            "fr": "{{ title }}",
            "en": "{{ title }}"
        },
        "prefix": {
            "fr": "fr/actualites/",
            "en": "en/news/"
        }
    },

    "default_data": {
        "template_ident": "generic",
        "main_menu": "content",
        "side_menu": "content"
    },

    "sources": {
        "default": {
            "table": "cms_news"
        }
    },
    "default_source": "default",

    "labels": {
        "name": {
            "fr": "Nouvelles",
            "en": "News"
        },
        "singular_name": {
            "fr": "Nouvelle",
            "en": "News"
        },
        "edit_item": {
            "fr": "Modifier la nouvelle",
            "en": "Edit news"
        },
        "all_items": {
            "fr": "Toutes les nouvelles",
            "en": "All News"
        },
        "menu_items": {
            "fr": "Nouvelles",
            "en": "News"
        }
    },

    "properties": {
        "id": {
            "type": "id"
        },
        "title": {
            "type": "string",
            "l10n": true,
            "label": {
                "en": "Title",
                "fr": "Titre"
            }
        },
        "subtitle": {
            "type": "text",
            "l10n": true,
            "input_type": "charcoal/admin/property/input/textarea",
            "label": {
                "en": "Subtitle",
                "fr": "Sous-titre"
            }
        },
        "summary": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Summary",
                "fr": "Sommaire"
            }
        },
        "content": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Content",
                "fr": "Contenu"
            }
        },
        "category": {
            "obj_type": "charcoal/cms/news-category"
        },
        "image": {
            "type": "image",
            "l10n": true,
            "public_access": true,
            "upload_path": "uploads/news/"
        },
        "news_date": {
            "type": "date-time",
            "label": {
                "en": "News date",
                "fr": "Date de la nouvelle"
            },
            "description": {
                "en": "The \"display\" date of this news.",
                "fr": "La date affichée de la nouvelle."
            },
            "notes": {
                "en": "Will be set to the current date if blank.",
                "fr": "La date actuelle sera utilisée si laissé vide."
            }
        },
        "info_url": {
            "type": "url",
            "l10n": true
        },
        "keywords": {
            "type": "object",
            "obj_type": "charcoal/cms/tag",
            "input_type": "charcoal/admin/property/input/selectize/tags",
            "multiple": true,
            "label": {
                "fr": "Mots-clés",
                "en": "Keywords"
            },
            "description": {
                "fr": "Les mots-clés permettent d'optimiser la recherche",
                "en": "Key-words optimises research"
            }
        }
    }
}
